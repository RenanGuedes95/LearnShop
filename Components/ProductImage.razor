<div class="flex items-center justify-center p-2 bg-transparent rounded-b-lg shadow-md ">
    <img src="@Image" alt="@Alt" 
            class="object-@(ObjectContain) border rounded-sm h-72 md:h-80 min-w-54 max-w-54 bg-gradient-to-br from-green-600 to-blue-800" 
            style="height:@(Height); width:@(Width);max-width: none;"
            />
</div>

@code {
    [Parameter]
    public string Image { get; set; } = string.Empty;

    [Parameter]
    public string Alt { get; set; } = string.Empty;

    [Parameter]
    public string Width { get; set; } = "150px";

    [Parameter]
    public string Height { get; set; } = "150px";

    [Parameter]
    public string ObjectContain { get; set; } = "contain";
}