<div class="flex h-[5vh] w-full items-center justify-center border bg-[#151773] text-@(TextSize) font-bold">
    <span class="text-white">@(Title)</span>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;

    [Parameter]
    public string TextSize { get; set; } = "2xl";
}