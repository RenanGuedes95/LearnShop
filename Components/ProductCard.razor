<div class="grid grid-rows-[auto_1fr_auto] gap-2 m-2 overflow-hidden 
            border rounded-md shadow-md 
            bg-gradient-to-br from-blue-400 to-green-600 
            hover:shadow-2xl p-4
            transition-transform transform hover:scale-105
            max-h-[35rem]"
     style="color: @(TextColor);
            width: @(Width);">
     
    <div class="flex items-center justify-between pb-2 border-b">
        <h2 class="text-xl font-bold text-primary">@ProductTitle</h2>
        <p class="text-sm italic">@Author</p>
    </div>

    <div class="grid grid-cols-[1fr_1fr] gap-4 py-4">
        <div class="flex items-center justify-center">
            <img src="@ProductImage" alt="@ProductTitle" 
                class="object-contain border rounded-sm h-80 max-w-56 bg-gradient-to-br from-green-600 to-blue-800" />
        </div>
        <div class="flex flex-col justify-between h-full">
            <div>
                <p class="text-sm">@ProductDescription</p>
            </div>

            <div class="text-xs text-right">
                <div>
                    <div>
                        <p class="text-sm font-normal text-left">Editora:</p>
                    </div>
                    <div class="mb-1 text-sm font-semibold text-left">
                        <a class="" href="">@(Publisher)</a>
                    </div>

                    <div>
                        <p class="text-sm font-normal text-left">Categoria:</p>
                    </div>
                    <div class="text-sm font-semibold text-left">
                        <a class="border-b text-blue-950" href="">@(Category)
                        </a>
                    </div>
                </div>
            
                <p class="pt-4">*Produto entregue em formato digital</p>
            </div>
        </div>
    </div>

    <div class="flex items-center justify-between pt-2 border-t">
        <p class="text-xl font-bold border-0 rounded-2xl bg-gradient-to-r from-green to-blue-500 text-blue-950">R$ @Price.ToString("N2")</p>
        <div class="flex gap-2">
             <button class="flex items-center px-3 py-1 text-sm font-medium text-white rounded-md bg-secondary hover:bg-secondary/80">
                <span class="mr-1 text-sm material-icons">add_shopping_cart</span> Adicionar ao carrinho
            </button>
            <button class="flex items-center px-3 py-1 text-sm font-medium text-white rounded-md bg-primary hover:bg-primary/80">
               <span class="mr-1 text-sm material-icons">shopping_cart</span> Comprar agora
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string BorderColor { get; set; } = "#151773";

    [Parameter]
    public string TextColor { get; set; } = "#000";

    [Parameter]
    public string Width { get; set; } = "100%";

    [Parameter]
    public string ProductTitle { get; set; } = string.Empty;

    [Parameter]
    public string ProductDescription { get; set; } = string.Empty;

    [Parameter]
    public string ProductImage { get; set; } = string.Empty;

    [Parameter]
    public string Author { get; set; } = string.Empty;

    [Parameter]
    public string Publisher { get; set; } = string.Empty;

    [Parameter]
    public string Category { get; set; } = string.Empty;

    [Parameter]
    public decimal Price { get; set; } = 0.0m;
}