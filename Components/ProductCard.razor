<div class="grid grid-rows-[auto_1fr_auto] gap-2 overflow-hidden 
            border rounded-md shadow-md 
            bg-gradient-to-br from-blue-400 to-green-600 
            hover:shadow-2xl p-4
            transition-transform transform hover:scale-102
            min-w-fit max-w-fit
            md:max-w-[400px] md:min-w-[350px]
            min-h-fit max-h-fit"
     style="color: @(TextColor);">
     
    <div class="flex items-center justify-between pb-2 border-b">
        <h2 class="text-xl font-bold text-primary">@ProductTitle</h2>
        <p class="text-sm italic">@Author</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-[1fr_1fr] gap-4 py-4">
        <div class="flex items-center justify-center p-2 bg-transparent rounded-b-lg shadow-md">
            <img src="@ProductImage" alt="@ProductTitle" 
                class="object-contain border rounded-sm h-72 md:h-80 min-w-54 max-w-54 bg-gradient-to-br from-green-600 to-blue-800" />
        </div>
        
        <div class="flex flex-col justify-between h-full">
            <EbookInfo
                ProductDescription="@ProductDescription"
                Publisher="@Publisher"
                Category="@Category" 
                ProductDescriptionTextSize="sm"
                LabelsTextSize="sm"
                PublisherTextSize="sm"
                CategoryTextSize="sm"
            />
        </div>
    </div>

    <div class="flex flex-wrap items-center justify-between gap-2 pt-2 border-t">
        <p class="px-2 text-2xl font-bold border-0 text-primary rounded-2xl bg-gradient-to-r from-green to-blue-500">
            R$ @Price.ToString("N2")
        </p>

        <div class="flex">
            <Button 
                Text="Adicionar ao carrinho" 
                Icon="add_shopping_cart" 
                OnClick="@(() => { AddToCart(); })"
                TextColor="#FFF"
                BackgroundColor="#151773"
                HoverBackgroundColor="#23238a"
                Size="md"
            />
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string BorderColor { get; set; } = "#151773";

    [Parameter]
    public string TextColor { get; set; } = "#000";

    [Parameter]
    public string ProductTitle { get; set; } = string.Empty;

    [Parameter]
    public string ProductDescription { get; set; } = string.Empty;

    [Parameter]
    public string ProductImage { get; set; } = string.Empty;

    [Parameter]
    public string Author { get; set; } = string.Empty;

    [Parameter]
    public string Publisher { get; set; } = string.Empty;

    [Parameter]
    public string Category { get; set; } = string.Empty;

    [Parameter]
    public decimal Price { get; set; } = 0.0m;

    private void AddToCart() 
    {
        Console.WriteLine($"Adicionando {ProductTitle} ao carrinho.");
    }
}